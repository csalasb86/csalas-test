  .float-left
    %h3 Scheduler
  .float-right
    %a.btn.btn-primary{:href => visitors_assign_path, :role => "button"} Asignar rutas

%table.table
  %thead.thead-dark
    %tr
      %th{:scope => "col"} VehÃ­culo
